//- Get the base from base.pug
extends base

block content 
    main.main
        .login-form
            h2.heading-secondary.ma-bt-lg Log into your account
            form.form(method="POST" action="/login" onclick="event.preventDefault()")
                .form__group
                    label.form__label(for='email') Email address
                    input#email.form__input(type='email', placeholder='you@example.com', name='email', required)
                .form__group.ma-bt-md
                    label.form__label(for='password') Password
                    input#password.form__input(type='password', placeholder='••••••••', name='password', required, minlength='8')
                .form__group
                    button.btn.btn--green(type='submit') Login

    script(src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js") 
    script(src='/js/login.js')